{
  "manifest_version": 2,
  "name": "Page Time Tracker with History Filtered",
  "version": "1.0",
  "permissions": ["<all_urls>", "activeTab", "storage", "history", "tabs", "windows"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
